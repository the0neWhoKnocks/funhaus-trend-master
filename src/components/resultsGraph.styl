svg {
  width: 100%;
  height: 100%;

  path.team1 {
    stroke: var(--col-team1);
  }
  circle.team1 {
    fill: var(--col-team1);
  }
  path.team2 {
    stroke: var(--col-team2);
  }
  circle.team2 {
    fill: var(--col-team2);
  }

  .month {
    fill: #ccc;
    text-anchor: middle;
    transform: translate(2px, 6px);
  }

  .scale-number {
    fill: #ccc;
    text-anchor: middle;
    transform: translate(-14px, -8px);
  }

  .no-results {
    font-size: 2em;
    text-anchor: middle;
  }
}
