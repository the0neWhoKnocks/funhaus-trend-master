@keyframes spin {
  from { transform:rotate(0deg); }
  to { transform:rotate(360deg); }
}
@keyframes bounce {
  0% {
    transform: translate(-50%, -50%) scale(0.9);
  }

  75% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 1;
  }

  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

.term-results {
  height: 100%;
  background: #333;
  display: flex;
  flex-direction: column;
  justify-content: center;

  &__graph {
    padding: 1em;
    position: relative;

    &-points {
      font-size: 4vw;
      text-align: center;
      line-height: 1.5em;
      padding: 0.25em;
      border-radius: 0.25em;
      background: rgba(255,255,255,1);
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      box-shadow: 0 6px 0.5em 0.25em rgba(0, 0, 0, 0.2);
      opacity: 0;

      > div {
        white-space: nowrap;
      }

      .is--team1 {
        color: var(--col-team1);
      }
      .is--team2 {
        color: var(--col-team2);
      }

      &.is--visible {
        animation: bounce 0.3s ease-in-out;
        animation-fill-mode: both;
      }
    }
  }

  &__loading {
    width: 100%;
    color: #FFF;
    font-size: 1.5rem;
    line-height: 1em;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 0;

    &::before {
      content: '';
      width: 1em;
      height: 1em;
      border: solid 0.15em rgba(255,255,255,0.25);
      border-top-color: currentColor;
      border-radius: 100%;
      animation: spin 0.5s linear infinite;
      display: inline-block;
      vertical-align: top;
    }
  }
}
