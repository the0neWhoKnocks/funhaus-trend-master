@keyframes spin {
  from { transform:rotate(0deg); }
  to { transform:rotate(360deg); }
}

.term-results {
  height: 100%;
  background: #333;

  &__graph {
    min-height: 423px; // seems to be the max height of the graph
    padding: 1em;
    position: relative;

    iframe {
      box-shadow: 0 0.5em 1em 0 #000 !important; // have to override Google's style
      position: relative;
      z-index: 1;
    }
  }

  &__loading {
    width: 100%;
    color: #FFF;
    font-size: 1.5rem;
    line-height: 1em;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 0;

    &::before {
      content: '';
      width: 1em;
      height: 1em;
      border: solid 0.15em rgba(255,255,255,0.25);
      border-top-color: currentColor;
      border-radius: 100%;
      animation: spin 0.5s linear infinite;
      display: inline-block;
      vertical-align: top;
    }
  }
}
