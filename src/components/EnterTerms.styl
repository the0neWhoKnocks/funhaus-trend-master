.enter-terms {
  height: 100%;
  background: #333;

  [contenteditable=true]:empty:before {
    content: attr(placeholder);
    font-style: italic;
    display: block; /* For Firefox */
    opacity: 0.25;
  }

  &__header {
    height: 5em;
    background: #ff7f00;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    &-img {
      width: 9rem;
      max-height: 175%;
      position: absolute;
      top: -2em;
      left: -1.5em;
    }

    &-title {
      color: #000;
      font-size: 2em;
      font-weight: bold;
      font-style: italic;
      line-height: 2.3em;
      text-transform: uppercase;
      margin-left: 4em;
    }
  }

  .is--va {
    height: 100%;
    min-height: 27em;
    background: #333;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  &__body {
    font-size: 1.25em;
    padding: 2rem;
    border-radius: 0.5em;
    margin: 0.5em;
    background: #EEE;
    box-shadow: 0px 2px 0px 2px rgba(0, 0, 0, 0.5);

    input {
      vertical-align: text-bottom;

      &[type="number"] {
        text-align: center;
      }
    }
  }

  &__input {
    padding: 0.25em 0.5em;
    border: solid 1px #AAA;
    margin-top: 0.5em;
    background: #FFF;
  }
}
