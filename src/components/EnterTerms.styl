.enter-terms {

  &__header {
    height: 5em;
    background: #333;
    position: relative;

    &-img {
      width: 9rem;
      max-height: 175%;
      position: absolute;
      top: -2em;
      left: -1.5em;
    }

    &-title {
      color: #fff;
      font-size: 2em;
      font-weight: bold;
      font-style: italic;
      line-height: 2.3em;
      text-transform: uppercase;
      margin-left: 4em;
    }
  }

  &__body {
    font-size: 1.25em;
    padding: 2rem;
    border-radius: 0.5em;
    margin: 0.5em;
    background: #EEE;
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    box-shadow: 0px 2px 0px 2px rgba(0, 0, 0, 0.5);
  }

  &__input {
    padding: 0.25em 0.5em;
    border: solid 1px #AAA;
    margin-top: 0.5em;
    background: #FFF;
  }
}
