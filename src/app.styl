:root {
  --col-team1: #f44336;
  --col-team1-dark: #7b0000;
  --col-team2: #4285f4;
  --col-team2-dark: #003e8a;
}

*, *::before, *::after {
  box-sizing: border-box;
}

html,
body {
  font: 16px Arial, Helvetica, sans-serif;
  padding: 0;
  margin: 0;
}

button {
  cursor: pointer;
}

html,
body,
.shell,
.view,
.term-panel {
  width: 100%;
  height: 100%;
}
